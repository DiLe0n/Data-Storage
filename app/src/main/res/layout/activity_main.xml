<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView para mostrar el texto "Fecha" -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="18sp" />

    <!-- EditText para ingresar la fecha (tipo Date) -->
    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese fecha"
        android:inputType="date"
        android:padding="10dp" />

    <!-- Botón para grabar los datos -->
    <Button
        android:id="@+id/boton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grabar"
        android:layout_marginTop="16dp" />

    <!-- Botón para recuperar los datos -->
    <Button
        android:id="@+id/boton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recuperar"
        android:layout_marginTop="16dp" />

    <!-- EditText para mostrar el contenido guardado (Multiline) -->
    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contenido grabado"
        android:inputType="textMultiLine"
        android:background="#ffff00"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:minLines="5"
        android:gravity="top" />

</LinearLayout>
